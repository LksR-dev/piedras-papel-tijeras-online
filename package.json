{
  "name": "cap4-realtime-2",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "nanoid": "^3.3.4",
    "nodemon": "^2.0.16",
    "parcel": "^2.5.0",
    "process": "^0.11.10"
  },
  "scripts": {
    "dev": "cross-env nodemon --watch './server/index.ts' --exec 'ts-node ./server/index.ts'",
    "dev:front": "parcel serve ./client/index.html",
    "build:front": "parcel build ./client/index.html",
    "build:api": "tsc ./server/index.ts",
    "build": "yarn build:front && yarn build:api",
    "start": "node ./server/index.js"
  },
  "dependencies": {
    "@types/node": "^17.0.38",
    "@vaadin/router": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "4.17.1",
    "firebase": "8.7.1",
    "firebase-admin": "^10.2.0",
    "path": "^0.12.7",
    "tsc": "^2.0.4",
    "typescript": "^4.6.4"
  }
}
